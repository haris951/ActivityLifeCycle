<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.PlaceFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:paddingTop="30sp"
        android:text="Places"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2_place"
        android:drawablePadding="15sp"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:text="@string/work"
        android:paddingVertical="30sp"
        android:paddingStart="10sp"
        android:paddingEnd="5sp"

        android:paddingTop="12sp"
        android:textSize="15sp"
        android:onClick="openMain7"
        app:drawableLeftCompat="@drawable/baseline_work_24"
        app:drawableRightCompat="@drawable/baseline_keyboard_arrow_right_24" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        app:layout_constraintTop_toBottomOf="@id/textView2_place"
        android:text="@string/add_homee"
        android:paddingStart="12sp"
        android:paddingEnd="5sp"
        android:paddingVertical="30sp"
        android:drawablePadding="5sp"
        android:textSize="15sp"
        android:layout_marginTop="5sp"
        android:onClick="addHome"
        app:drawableLeftCompat="@drawable/baseline_home_24"
        app:drawableRightCompat="@drawable/baseline_keyboard_arrow_right_24"
         />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:text="@string/add_School"
        android:paddingVertical="30sp"
        android:drawablePadding="5sp"
        android:layout_marginTop="5sp"
        android:paddingStart="12sp"
        android:paddingEnd="5sp"
        android:textSize="15sp"
        android:onClick="addSchool"
        app:drawableLeftCompat="@drawable/baseline_school_24"
        app:drawableRightCompat="@drawable/baseline_keyboard_arrow_right_24"
        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        android:text="@string/add_gym"
        android:paddingVertical="30sp"
        android:drawablePadding="5sp"
        android:paddingStart="12sp"
        android:paddingEnd="5sp"
        android:layout_marginTop="5sp"
        android:textSize="15sp"
        android:onClick="addGym"
        app:drawableLeftCompat="@drawable/baseline_fitness_center_24"
        app:drawableRightCompat="@drawable/baseline_keyboard_arrow_right_24"
        />
    <TextView
        android:id="@+id/textView6_addcafe"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:paddingVertical="30sp"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        android:text="@string/add_cafe_or_restaurant"
        android:drawablePadding="5sp"
        android:paddingStart="12sp"
        android:paddingEnd="5sp"
        android:textSize="15sp"
        android:onClick="addCafe"
        android:layout_marginTop="5sp"
        app:drawableLeftCompat="@drawable/baseline_local_cafe_24"
        app:drawableRightCompat="@drawable/baseline_keyboard_arrow_right_24"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingStart="35sp"
        android:text="@string/add_a_place_to_know_when_members_come_or_go"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6_addcafe" />
    <Button
        android:id="@+id/addplace"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="+ Add place"
        android:backgroundTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7"/>
</androidx.constraintlayout.widget.ConstraintLayout>